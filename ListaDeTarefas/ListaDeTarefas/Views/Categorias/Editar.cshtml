@model Categoria
@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<form method="post" asp-controler="Categorias" asp-action="Editar">
	<input type="hidden" asp-for="CategoriaId" />

	

	<div class="mb-3">
		<label for="Nome" class="form-label">Nome</label>
		<input type="text" class="form-control" asp-for="Nome" id="Nome">
		<span class="text-danger" asp-validation-for="Nome"></span>
	</div>

	
	<div class="d-flex gap-5 mt-5">
		<button type="submit" class="btn btn-success w-50">Editar</button>
		<a class="btn btn-primary w-50" asp-controller="Categorias" asp-action="Index">Voltar</a>

	</div>



</form>
</div>

