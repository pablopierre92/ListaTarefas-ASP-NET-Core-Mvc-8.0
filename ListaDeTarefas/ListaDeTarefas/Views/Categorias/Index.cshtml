@model IEnumerable<Categoria>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>@ViewData["Title"]</h1>
        <a class="btn btn-success mx-2" asp-asp-controller="Categorias" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus mx-1"></i>Cadastrar nova categoria</a>
    </div>

    
    <table id="Emprestimos" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Categoria</th>                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {

                @foreach (var categoria in Model)
                {
                    <tr>
                        <th scope="row">@categoria.CategoriaId</th>
                        <td>@categoria.Nome</td>
                        
                        <td>
                            <a asp-controller="Categorias" asp-action="Editar" asp-route-id="@categoria.CategoriaId" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-1"></i>Editar</a>
                            <a asp-controller="Categorias" asp-action="Excluir" asp-route-id="@categoria.CategoriaId" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-1"></i>Excluir</a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>

</div>

